// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_DIRECT")
}

model User {
  id                 String   @id @default(uuid())
  username           String   @unique
  password           String
  name               String
  challengeStartDate DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  dailyTasks    DailyTask[]
  spendings     Spending[]
  taskTemplates TaskTemplate[]
  dietMeals     DietMeal[]
}

model TaskTemplate {
  id          String   @id @default(uuid())
  userId      String
  name        String
  icon        String   @default("CheckCircle")
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskCompletions TaskCompletion[]

  @@unique([userId, name])
  @@index([userId])
  @@index([userId, isActive])
}

model DailyTask {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime
  steps     Boolean  @default(false)
  training  Boolean  @default(false)
  diet      Boolean  @default(false)
  book      Boolean  @default(false)
  learning  Boolean  @default(false)
  water     Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  spendings       Spending[]
  taskCompletions TaskCompletion[]

  @@unique([userId, date])
  @@index([userId])
}

model TaskCompletion {
  id             String   @id @default(uuid())
  dailyTaskId    String
  taskTemplateId String
  completed      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  dailyTask    DailyTask    @relation(fields: [dailyTaskId], references: [id], onDelete: Cascade)
  taskTemplate TaskTemplate @relation(fields: [taskTemplateId], references: [id], onDelete: Cascade)

  @@unique([dailyTaskId, taskTemplateId])
  @@index([dailyTaskId])
  @@index([taskTemplateId])
}

model DietMeal {
  id          String   @id @default(uuid())
  userId      String
  day         Int
  mealType    String
  name        String
  kcal        Float
  protein     Float
  fat         Float
  carbs       Float
  ingredients String
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, day])
}

model Spending {
  id          String   @id @default(uuid())
  userId      String
  dailyTaskId String
  amount      Float
  category    String
  description String?
  createdAt   DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyTask DailyTask @relation(fields: [dailyTaskId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dailyTaskId])
}
